# Telegram Feed Website Configuration
# Rename this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=docker_secret_key_change_in_production_2025
FLASK_DEBUG=False

# Database Configuration (Docker internal)
DATABASE_URL=postgresql://telegram_feed:secure_password_2025@db:5432/telegram_feed_db

# Application Settings
POSTS_PER_PAGE=10
APP_NAME=Telegram Feed Website

# Telegram API Configuration (optional)
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_SESSION_NAME=telegram_feed_bot

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO